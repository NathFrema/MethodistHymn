<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CanticleContentActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="@color/drawer_icon"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_gravity="fill_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:scrollbars="none">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            app:cardPreventCornerOverlap="false"
            android:clipToPadding="false"
            android:id="@+id/card_view"
            app:cardUseCompatPadding="true"
            android:background="@drawable/card_bg"
            android:layout_marginBottom="10dp">

            <com.admin.methodisthymn.fontAdapter.CustomTextView
                android:id="@+id/canticle_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cantitle Content"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/canticle_text"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>